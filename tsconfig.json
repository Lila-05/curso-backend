{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@*": ["*"]
    },
    "typeRoots": ["@types", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}