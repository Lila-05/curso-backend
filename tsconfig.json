{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "repositories/*": ["repositories/*"],
      "@models/*": ["models/*"],
      "@routers/*": ["routers/*"],
      "@server/*": ["server/*"],
      "@config/*": ["config/*"]
    }
    
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}